<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menu">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inicioButton"
            android:background="@drawable/button"
            android:src="@drawable/sanus"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:id="@+id/desayunoButton"
                android:src="@drawable/desayuno"
                android:layout_column="1"
                />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_column="3" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mediaButton"
                android:background="@drawable/button"
                android:src="@drawable/media"
                android:layout_column="4" />
        </TableRow>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/almuerzoButton"
                android:src="@drawable/almuerzo"
                android:background="@drawable/button"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/algoButton"
                android:src="@drawable/almuerzo"
                android:background="@drawable/button"
                android:layout_column="4" />

        </TableRow>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cenaButton"
                android:src="@drawable/almuerzo"
                android:background="@drawable/button"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editarButton"
                android:src="@drawable/almuerzo"
                android:background="@drawable/button"
                android:layout_column="4" />
        </TableRow>

        <TextView
            style="@style/Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informacion general"
            android:id="@+id/textView9"
            android:layout_column="1" />

    </TableLayout>
</ScrollView>